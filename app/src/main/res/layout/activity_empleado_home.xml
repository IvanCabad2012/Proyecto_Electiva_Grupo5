<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".empleado_home">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconopc3" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="72dp"
        android:layout_height="20dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:text="@string/eh_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="161dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:text="@string/eh_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bi1_etiquetado"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        app:srcCompat="@drawable/iconopc2" />

                    <TextView
                        android:id="@+id/bt1_etiquetado"
                        android:layout_width="96dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/eh_b1_etiquetado" />

                </LinearLayout>

                <Space
                    android:layout_width="96dp"
                    android:layout_height="144dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bi2_listado"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        app:srcCompat="@drawable/iconopc5" />

                    <TextView
                        android:id="@+id/bt2_listado"
                        android:layout_width="96dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/eh_b2_listado" />
                </LinearLayout>

            </TableRow>

            <Space
                android:layout_width="96dp"
                android:layout_height="12dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bi3_perfil"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        app:srcCompat="@drawable/iconopc3" />

                    <TextView
                        android:id="@+id/bt3_perfil"
                        android:layout_width="96dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/eh_b3_perfil" />

                </LinearLayout>

                <Space
                    android:layout_width="96dp"
                    android:layout_height="144dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bi4_procesos"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        app:srcCompat="@drawable/iconopc6" />

                    <TextView
                        android:id="@+id/bt4_procesos"
                        android:layout_width="96dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/eh_b4_procesos" />
                </LinearLayout>


            </TableRow>

            <Space
                android:layout_width="96dp"
                android:layout_height="12dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bi5_traza"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        app:srcCompat="@drawable/iconopc7" />

                    <TextView
                        android:id="@+id/bt5_traza"
                        android:layout_width="96dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/eh_b5_traza" />

                </LinearLayout>

            </TableRow>

        </TableLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>